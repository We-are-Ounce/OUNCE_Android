<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width = "fill_parent"
    android:layout_height = "wrap_content"
    >
<androidx.constraintlayout.widget.ConstraintLayout
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/record_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:contentInsetStart="0dp"
            app:contentInsetStart="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="24dp"
                    android:background="#FFFFFF"
                    android:src="@drawable/ic_back" />

                <TextView
                    style="@style/fontFamiliyandPadding"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="기록하기"
                    android:textColor="@color/black"
                    android:textFontWeight="400"
                    android:textSize="18sp" />

            </RelativeLayout>


        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:fontFamily="@font/notosanskr_medium"
        android:text="제품 회사명"
        style="@style/fontFamiliyandPadding"
        android:textColor="@color/warm_grey"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_Preview" />

    <ImageView
        android:id="@+id/image_Preview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:src="@drawable/img_product"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appbarLayout" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="제품 이름"
        style="@style/fontFamiliyandPadding"
        android:textColor="@color/greyish_brown"
        android:fontFamily="@font/notosanskr_medium"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <ImageButton
        android:id="@+id/record_dry_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="4dp"
        android:background="@android:color/transparent"
        android:lineSpacingExtra="7sp"
        android:src="@drawable/img_category"
        android:textColor="@color/greyish_brown"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@+id/record_deer_btn"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/dry_txt"
        android:layout_width="26dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="7sp"
        android:text="건식"
        android:textColor="@color/greyish_brown"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/record_dry_btn"
        app:layout_constraintEnd_toEndOf="@+id/record_dry_btn"
        app:layout_constraintHorizontal_bias="0.545"
        app:layout_constraintStart_toStartOf="@+id/record_dry_btn"
        app:layout_constraintTop_toBottomOf="@+id/record_dry_btn" />

    <ImageButton
        android:id="@+id/record_deer_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="4dp"
        android:text="사슴"
        android:lineSpacingExtra="7sp"
        android:textSize="12sp"
        android:textColor="@color/greyish_brown"
        android:src="@drawable/img_category"
        android:background="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/record_pig_btn"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/record_dry_btn"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/deer_txt"
        android:layout_width="26dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="7sp"
        android:text="사슴"
        android:textColor="@color/greyish_brown"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/record_deer_btn"
        app:layout_constraintEnd_toEndOf="@+id/record_deer_btn"
        app:layout_constraintHorizontal_bias="0.545"
        app:layout_constraintStart_toStartOf="@+id/record_deer_btn"
        app:layout_constraintTop_toBottomOf="@+id/record_deer_btn" />

    <ImageButton
        android:id="@+id/record_pig_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="56dp"
        android:text="돼지"
        android:lineSpacingExtra="7sp"
        android:textSize="12sp"
        android:textColor="@color/greyish_brown"
        android:src="@drawable/img_category"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/record_deer_btn"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/pig_txt"
        android:layout_width="26dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="7sp"
        android:text="돼지"
        android:textColor="@color/greyish_brown"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/record_pig_btn"
        app:layout_constraintEnd_toEndOf="@+id/record_pig_btn"
        app:layout_constraintHorizontal_bias="0.545"
        app:layout_constraintStart_toStartOf="@+id/record_pig_btn"
        app:layout_constraintTop_toBottomOf="@+id/record_pig_btn" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/notosanskr_medium"
        android:text="필수 입력"
        android:textColor="#a6a6a6"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/record_dry_btn" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="26dp"
        android:fontFamily="@font/notosanskr_medium"
        android:text="총점"
        android:textColor="#000000"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/notosanskr_medium"
        android:text="기호도"
        android:textColor="#000000"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <com.hedgehog.ratingbar.RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="28dp"
        android:paddingBottom="8dp"
        app:clickable="true"
        app:layout_constraintBottom_toBottomOf="@+id/textView4"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:starCount="5"
        app:starEmpty="@drawable/ic_total_unselected"
        app:starFill="@drawable/ic_evaluate_full"
        app:starImageHeight="32dp"
        app:starImageWidth="32dp" />

    <com.hedgehog.ratingbar.RatingBar
        android:id="@+id/ratingBar2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:clickable="true"
        app:layout_constraintBottom_toBottomOf="@+id/textView5"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintStart_toStartOf="@+id/ratingBar"
        app:starCount="5"
        app:starEmpty="@drawable/ic_favorite_unselected"
        app:starFill="@drawable/ic_favorite_select"
        app:starImageHeight="32dp"
        app:starImageWidth="32dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:fontFamily="@font/notosanskr_medium"
        android:text="한 줄 평가"
        android:textColor="@color/greyish_brown"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="349dp"
        android:layout_height="38dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="아주 맛있는 퍼펙트한 사료였다 0u0"
        android:textColor="@color/greyish_brown"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="29dp"
        android:fontFamily="@font/notosanskr_medium"
        android:text="선택 입력"
        android:textColor="#a6a6a6"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="26dp"
        android:text="변상태"
        android:textColor="#000000"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="46dp"
        android:text="변냄새"
        android:textColor="#000000"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/textView8"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:text="트러블"
        android:textColor="#000000"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/textView9"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:text="메모"
        android:textColor="#000000"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/textView10"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chipGroup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="48dp"
        android:orientation="horizontal"
        app:chipSpacingHorizontal="4dp"
        app:singleLine="true"
        app:singleSelection="true"
        app:layout_constraintBottom_toBottomOf="@+id/textView8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView8"
        app:layout_constraintTop_toTopOf="@+id/textView8"
        >

        <com.google.android.material.chip.Chip
            android:id="@+id/record_chip"
            style="@style/recordFilterStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false" />

        <com.google.android.material.chip.Chip
            android:id="@+id/record_chip_two"
            style="@style/recordFilterStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.google.android.material.chip.Chip
            android:id="@+id/record_chip_three"
            style="@style/recordFilterStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.google.android.material.chip.Chip
            android:id="@+id/record_chip_four"
            style="@style/recordFilterStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.google.android.material.chip.Chip
            android:id="@+id/record_chip_five"
            style="@style/recordFilterStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </com.google.android.material.chip.ChipGroup>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="묽다"
        android:textSize="10sp"
        android:textColor="@color/warm_grey"
        android:lineSpacingExtra="14sp"
        app:layout_constraintStart_toStartOf="@+id/chipGroup"
        app:layout_constraintTop_toBottomOf="@+id/chipGroup" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="단단하다"
        android:textSize="10sp"
        android:textColor="@color/warm_grey"
        android:lineSpacingExtra="14sp"
        app:layout_constraintEnd_toEndOf="@+id/chipGroup"
        app:layout_constraintTop_toBottomOf="@+id/chipGroup" />


    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chipSmellGroup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:chipSpacingHorizontal="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView9"
        app:layout_constraintEnd_toEndOf="@+id/chipGroup"
        app:layout_constraintStart_toStartOf="@+id/chipGroup"
        app:layout_constraintTop_toTopOf="@+id/textView9"
        app:singleLine="true"
        app:singleSelection="true">

        <com.google.android.material.chip.Chip
            android:id="@+id/record_smellchip"
            style="@style/recordFilterStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <com.google.android.material.chip.Chip
            android:id="@+id/record_smellchip_two"
            style="@style/recordFilterStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <com.google.android.material.chip.Chip
            android:id="@+id/record_smellchip_three"
            style="@style/recordFilterStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <com.google.android.material.chip.Chip
            android:id="@+id/record_smellchip_four"
            style="@style/recordFilterStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.google.android.material.chip.Chip
            android:id="@+id/record_smellchip_five"
            style="@style/recordFilterStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </com.google.android.material.chip.ChipGroup>

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:lineSpacingExtra="14sp"
        android:text="독하다"
        android:textColor="@color/warm_grey"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="@+id/chipSmellGroup"
        app:layout_constraintTop_toBottomOf="@+id/chipSmellGroup" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="독하지않다"
        android:textSize="10sp"
        android:textColor="@color/warm_grey"
        android:lineSpacingExtra="14sp"
        app:layout_constraintEnd_toEndOf="@+id/chipSmellGroup"
        app:layout_constraintTop_toBottomOf="@+id/chipSmellGroup" />


    <ImageButton
        android:id="@+id/record_trouble_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="32dp"
        android:background="@color/white"
        android:src="@drawable/btn_trouble"
        app:layout_constraintBottom_toBottomOf="@+id/textView10"
        app:layout_constraintEnd_toStartOf="@+id/record_ear_btn"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/textView10"
        app:layout_constraintStart_toStartOf="@+id/chipSmellGroup"
        app:layout_constraintTop_toTopOf="@+id/textView15"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="7sp"
        android:textColor="@color/dark"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/record_trouble_btn"
        app:layout_constraintEnd_toEndOf="@+id/record_trouble_btn"
        app:layout_constraintStart_toStartOf="@+id/chipSmellGroup"
        app:layout_constraintTop_toTopOf="@+id/record_trouble_btn"
        tools:text="눈" />

    <ImageButton
        android:id="@+id/record_ear_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:background="@color/white"
        android:src="@drawable/btn_trouble"
        app:layout_constraintStart_toEndOf="@+id/textView10"
        app:layout_constraintTop_toTopOf="@+id/record_trouble_btn" />


    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="7sp"
        android:textColor="@color/dark"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/record_trouble_btn"
        app:layout_constraintEnd_toEndOf="@+id/record_ear_btn"
        app:layout_constraintStart_toStartOf="@+id/record_ear_btn"
        app:layout_constraintTop_toTopOf="@+id/record_ear_btn"
        tools:text="귀" />

    <ImageButton
        android:id="@+id/record_fur_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:background="@color/white"
        android:src="@drawable/btn_trouble"
        app:layout_constraintBottom_toBottomOf="@+id/record_ear_btn"
        app:layout_constraintStart_toEndOf="@+id/textView10"
        app:layout_constraintTop_toTopOf="@+id/record_ear_btn" />


    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="7sp"
        android:textColor="@color/dark"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/record_fur_btn"
        app:layout_constraintEnd_toEndOf="@+id/record_fur_btn"
        app:layout_constraintStart_toStartOf="@+id/record_fur_btn"
        app:layout_constraintTop_toTopOf="@+id/record_fur_btn"
        tools:text="털" />

    <ImageButton
        android:id="@+id/record_vomit_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="168dp"
        android:background="@color/white"
        android:src="@drawable/btn_trouble"
        app:layout_constraintStart_toEndOf="@+id/textView10"
        app:layout_constraintTop_toTopOf="@+id/record_fur_btn" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="7sp"
        android:textColor="@color/dark"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/record_fur_btn"
        app:layout_constraintEnd_toEndOf="@+id/record_vomit_btn"
        app:layout_constraintStart_toStartOf="@+id/record_vomit_btn"
        app:layout_constraintTop_toTopOf="@+id/record_vomit_btn"
        tools:text="구토" />



    <EditText
        android:id="@+id/memo_edt"
        android:layout_width="0dp"
        android:layout_height="76dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="28dp"
        android:text="아주 맛있는 사료였다람쥐"
        android:textColor="@color/warm_grey"
        android:textSize="12sp"
        android:background="@drawable/recordedge"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView14" />

    <Button
        android:id="@+id/record_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:background="@color/wheat"
        android:text="저장"
        android:fontFamily="@font/notosanskr_medium"
        app:layout_constraintTop_toBottomOf="@+id/memo_edt" />


</androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>



