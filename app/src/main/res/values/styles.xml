<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/dark_peach</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/dark</item>
        <item name="colorControlNormal">@color/white_three</item>
    </style>
    
    <style name="mainTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/dark_peach</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/dark</item>
        <item name="colorControlNormal">@color/white_three</item>
        <item name="android:itemBackground">@color/white</item>
        <item name="android:textAppearanceLargePopupMenu">@style/popupModifyStyle</item>
        <item name="android:textAppearanceSmallPopupMenu">@style/popupModifyStyle</item>
    </style>

    <style name="starRating" parent="Widget.AppCompat.RatingBar">
        <item name="android:progressDrawable">@drawable/record_ratingstar</item>
        <item name="android:minHeight">50dp</item>
    </style>


    <style name="fontFamiliyandPadding">
        <item name="android:includeFontPadding">false</item>
        <item name="fontFamily">@font/notosanskr</item>
    </style>

    <style name="SmallText" parent="fontFamiliyandPadding">
        <item name="android:textSize">12sp</item>
        <item name="android:lineSpacingExtra">7sp</item>
        <item name="android:textColor">@color/greyish_two</item>
    </style>

    <style name="siginButtonStyle" parent="fontFamiliyandPadding">
        <item name="android:textSize">18sp</item>
        <item name="android:lineSpacingExtra">18sp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingVertical">13dp</item>
        <item name="android:paddingHorizontal">73dp</item>
    </style>

    <style name="configurationStyle" parent="fontFamiliyandPadding">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:lineSpacingExtra">18sp</item>
        <item name="android:paddingLeft">28dp</item>
        <item name="android:paddingVertical">18dp</item>
    </style>


    <style name="textStyle_1" parent="fontFamiliyandPadding">
        <item name ="android:textSize">22sp</item>
        <item name ="android:lineSpacingExtra">11sp</item>
        <item name ="android:textColor">@color/greyish_brown</item>
    </style>

    <style name="infoTextStyle" parent="fontFamiliyandPadding">
        <item name="android:fontWeight">400</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:textColor">@color/dark</item>
    </style>

    <style name="inputTextStyle" parent="fontFamiliyandPadding">
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:fontWeight">100</item>
        <item name="android:textColor">@color/greyish_brown</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="pinkTextStyle" parent="fontFamiliyandPadding">
        <item name="android:textSize">12sp</item>
        <item name="android:lineSpacingExtra">7sp</item>
        <item name="android:textColor">@color/dark_peach</item>
        <item name="android:fontWeight">400</item>
    </style>

    <style name="filterTextStyle" parent="fontFamiliyandPadding">
        <item name="android:fontWeight">700</item>
        <item name="android:textSize">12sp</item>
        <item name="android:lineSpacingExtra">7sp</item>
    </style>

    <style name="filterTitleStyle" parent="fontFamiliyandPadding">
        <item name="android:fontWeight">400</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">5sp</item>

    </style>

    <style name="recordFilterStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipMinHeight">16dp</item>
        <item name="chipMinTouchTargetSize">0dp</item>
        <item name="chipEndPadding">12dp</item>
        <item name="chipStartPadding">12dp</item>
        <item name="chipBackgroundColor">@color/record_chip_status</item>
        <item name="checkedIconEnabled">false</item>
        <item name="checkedIconVisible">false</item>
    </style>

    <style name="popupModifyStyle" parent="@style/TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">@color/greyish_brown</item>
    </style>

    <style name = "MySearchViewStyle" parent="Widget.AppCompat.SearchView">
        <!-- Background for the search query section (e.g. EditText) -->
<!--        <item name="queryBackground">...</item>-->
        <!-- Background for the actions section (e.g. voice, submit) -->
<!--        <item name="submitBackground">...</item>-->
        <!-- Close button icon -->
        <item name="closeIcon">@drawable/ic_close</item>
        <!-- Search button icon -->
        <item name="searchIcon">@drawable/ic_search</item>
        <!-- Go/commit button icon -->
<!--        <item name="goIcon">...</item>-->
        <!-- Voice search button icon -->
<!--        <item name="voiceIcon">...</item>-->
        <!-- Commit icon shown in the query suggestion row -->
<!--        <item name="commitIcon">...</item>-->
        <!-- Layout for query suggestion rows -->
<!--        <item name="suggestionRowLayout">...</item>-->
        <item name="android:textSize">14sp</item>
    </style>

