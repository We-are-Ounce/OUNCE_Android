<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/img_search_main_profile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="50dp"
                android:layout_marginTop="21dp"
                android:src="@drawable/img_card_cat"
                app:layout_constraintDimensionRatio="1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_search_main_cat_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="67dp"
                android:fontFamily="@font/notosanskr_medium"
                android:text="가을이"
                android:textColor="@color/greyish_brown"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/img_search_main_profile" />

            <TextView
                android:id="@+id/tv_search_main_cat_similarity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="62dp"
                android:layout_marginRight="5.4dp"
                android:fontFamily="@font/notosanskr_regular"
                android:text="82%"
                android:textColor="@color/greyish_brown"
                app:layout_constraintEnd_toStartOf="@+id/tv_search_main_correspondence"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_search_main_cat_name" />

            <TextView
                android:id="@+id/tv_search_main_correspondence"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="62dp"
                android:fontFamily="@font/notosanskr_regular"
                android:text="일치"
                android:textColor="@color/greyish_brown"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/tv_search_main_cat_similarity"
                app:layout_constraintTop_toBottomOf="@+id/tv_search_main_cat_name" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:paddingBottom="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_search_main_cat_similarity">

                <ImageView
                    android:id="@+id/img_search_main_review_1"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginRight="6dp"
                    android:background="@color/white_two" />

                <ImageView
                    android:id="@+id/img_search_main_review_2"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginRight="6dp"
                    android:background="@color/white_two" />

                <ImageView
                    android:id="@+id/img_search_main_review_3"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@color/white_two" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>